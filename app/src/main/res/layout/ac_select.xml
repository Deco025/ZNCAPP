<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1D445C"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/IPinput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal|center_vertical"

                android:layout_weight="10"
                android:gravity="center_horizontal"
                android:text="192.168.1.115"
                android:textColor="@color/purple_200"
                android:textSize="25dp"></EditText>

            <Button
                android:id="@+id/BU_Connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="连接"
                android:textSize="25dp"
                tools:layout_editor_absoluteX="242dp"
                tools:layout_editor_absoluteY="27dp" />

            <com.example.znc_app.ui.theme.MYLed
                android:id="@+id/LED_c"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TX_dlayTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="100"
                android:gravity="bottom|center_horizontal"
                android:text="999ms"
                android:textSize="25dp" />

        </LinearLayout>


        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_weight="100"
            android:columnCount="4"
            android:rowCount="4">

            <Button
                android:id="@+id/button_0_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="A1"
                android:textSize="40dp"/>

            <Button
                android:id="@+id/button_0_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:text="B1"
                android:textSize="40dp"/>

            <Button
                android:id="@+id/button_0_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:text="C1"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/button_0_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="D1"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/button_1_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="A2"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/button_1_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="B2"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/button_1_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="C2"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/button_1_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="D2"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/button_2_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="A3"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/button_2_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="B3"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/button_2_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="C3"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/button_2_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="D3"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/button_3_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="A4"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/button_3_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="B4"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/button_3_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="C4"
                android:textSize="40dp"
                />

            <Button
                android:id="@+id/button_3_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="D4"
                android:textSize="40dp"
                />
        </GridLayout>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="left" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="600dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="38dp" />


    </LinearLayout>
</FrameLayout>
